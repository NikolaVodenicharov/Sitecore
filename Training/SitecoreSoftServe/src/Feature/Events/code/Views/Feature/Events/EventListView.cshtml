@using SitecoreSoftServe.Feature.Events
@using SitecoreSoftServe.Feature.Events.Models
@using Sitecore.Globalization;

@model EventListModel

@if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    <div class="alert alert-info">@Translate.Text("EventsCannotBeEdit")</div>
}

<div class="event-area section-padding bg-white event-page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title-wrapper">
                    <div class="section-title">
                        <h3>@Html.Sitecore().Field(Templates.EventList.Title.ToString(), Model.Datasource)</h3>
                        <p>@Html.Sitecore().Field(Templates.EventList.Description.ToString(), Model.Datasource)</p>
                    </div>

                    @RenderEvents(Model.Events)
                </div>
            </div>
        </div>
    </div>
</div>

@helper RenderEvents(List<EventModel> events)
{
    <div class="row">
        @foreach (var eventItem in events)
        {
            @Html.Partial("~/Views/Feature/Events/_EventView.cshtml", eventItem);
        }
    </div>
}