@using SitecoreSoftServe.Feature.Navigations.Common
@using SitecoreSoftServe.Feature.Navigations.Models.FooterModels

@model MainFooterLinksModel

<div class="single-footer-widget">
    <h3>
        @Html.Sitecore().Field(FooterTemplates.UsefulLinks.Title.ToString(), Model.Item)
    </h3>
    <ul class="footer-list">
        @foreach (var linkCouple in Model.LinkCouples)
        {
            <li>
                <a href="@linkCouple.Url">@linkCouple.Name</a>
            </li>
        }
    </ul>
</div>

