@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation

@model RenderingModel

@if (Model != null && Model.PageItem != null)
{
    <div class="footer-widget-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    @Html.Sitecore().DynamicPlaceholder("main-footer-placeholder-1")
                </div>
                <div class="col-lg-3 col-md-6">
                    @Html.Sitecore().DynamicPlaceholder("main-footer-placeholder-2")
                </div>
                <div class="col-lg-3 col-md-6">
                    @Html.Sitecore().DynamicPlaceholder("main-footer-placeholder-3")
                </div>
                <div class="col-lg-3 col-md-6">
                    @Html.Sitecore().DynamicPlaceholder("main-footer-placeholder-4")
                </div>
            </div>
        </div>
    </div>
}